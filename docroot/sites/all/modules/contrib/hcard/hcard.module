/**
 * Implementation of hook_block().
 */
function hcard_block($op = 'list', $delta = 0, $edit = array()) {
  switch ($op) {
    case 'list':
      $blocks[0] = array(
        'info' => 'hCard',
        'weight' => 10,
        'enabled' => 1,
        'region' => 'footer'
      );
      return $blocks;
    case 'view':
      $block = array();
      switch ($delta) {
        case 0:
          $hcard = variable_get('hcard', array());
          if ($hcard) {
            $block = array(
              'subject' => '',
              'content' => theme('hcard', $hcard),
            );
          }
        return $block;
      }
  }

}

